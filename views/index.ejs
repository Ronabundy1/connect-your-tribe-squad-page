<%- include('./partials/head') %>

<div class="container">
    <h1>Squad Members</h1>
    
    <!-- Filters sectie/formulier -->
<div class="filters">
    <form action="/" method="get">
    <!-- Zoekveld -->
    <label for="filterInput">Zoeken:</label>
    <input type="text" name="search" id="filterInput" placeholder="Zoek naar leden...">
            
    <!-- Verjaardagsfilter -->
    <label for="birthdayFilter">Verjaardag:</label>
    <input type="text" name="birthday" id="birthdayFilter" placeholder="YYYY-MM-DD">
            
    <!-- Verblijfplaatsfilter -->
    <label for="residenceFilter">Verblijfplaats:</label>
    <input type="text" name="residence" id="residenceFilter" placeholder="Voer verblijfplaats in">

    <!-- ID-filter -->
    <label for="idFilter">ID:</label>
    <input type="text" name="id" id="idFilter" placeholder="Voer ID in">

    <!-- Bijnaamfilter -->
    <label for="nicknameFilter">Bijnaam:</label>
    <input type="text" name="nickname" id="nicknameFilter" placeholder="Voer bijnaam in">

    <!-- Knop Filters Toepassen -->
    <button type="submit">Filters Toepassen</button>
    </form>
    </div>
    
    <!-- Homepage sectie -->
    <div class="homepage">
        <h2>Welkom op onze squad-pagina!</h2>
        <p>Ontdek hieronder onze squad-leden.</p>
    </div>
    
    <!-- Squad-leden sectie -->  
    <div class="squad-members" id="squadMembers">
        <% persons.forEach(function(person) { %>
            <div class="member">
                <!-- Leden-avatar -->
                <img src="<%= person.avatar %>" alt="<%= person.name %>">
                <!-- Leden-naam -->
                <p>Naam: <%= person.name %></p>
                <!-- Leden-verjaardag -->
                <p><i class="fas fa-birthday-cake icon"></i><%= person.birthday %></p>
                <!-- Leden-verblijfplaats -->
                <p><i class="fas fa-home icon"></i><%= person.residence %></p>
                <!-- Leden-ID -->
                <p><i class="fas fa-paint-brush icon"></i> <%= person.id %></p>
                <!-- Leden-bijnaam -->
                <p><%= person.nickname %></p>
                <!-- Leden-GitHub-handle -->
                <!-- Maak GitHub-handle een klikbare link -->
                <p><a href="https://github.com/<%= person.github_handle %>"><%= person.github_handle %></a></p>
                <!-- Voeg andere gegevensvelden toe indien nodig -->
            </div>
        <% }); %>
    </div>

<%- include('./partials/foot') %>

