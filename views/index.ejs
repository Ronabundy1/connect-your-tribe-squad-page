<%- include('./partials/head') %>

<div class="container">
    <h1>Squad Members</h1>
    
    <!-- Filters section -->
    <div class="filters">
        <form action="/" method="get">
            <label for="filterInput">Search:</label>
            <input type="text" name="search" id="filterInput" placeholder="Search for members...">
            
            <label for="birthdayFilter">Birthday:</label>
            <input type="text" name="birthday" id="birthdayFilter" placeholder="YYYY-MM-DD">
            
            <label for="residenceFilter">Residence:</label>
            <input type="text" name="residence" id="residenceFilter" placeholder="Enter homeplaats">

            <label for="idFilter">ID:</label>
            <input type="text" name="id" id="idFilter" placeholder="Enter ID">

            <button type="submit">Apply Filters</button>
        </form>
    </div>
    
    <!-- Homepage section -->
    <div class="homepage">
        <h2>Welcome to our squad page!</h2>
        <p>Explore our squad members below.</p>
    </div>
    <!-- verder moet ik custom moet toegevoegt worden van iedere team of squad: Birthday, residence-->
    <!-- Squad members section -->
    <div class="squad-members" id="squadMembers">
        <% persons.forEach(function(person) { %>
            <div class="member">
                <img src="<%= person.image %>" alt="<%= person.name %>">
                <p>Name: <%= person.name %></p>
                <p><i class="fas fa-birthday-cake icon"></i><%= person.birthday %></p>
                <p><i class="fas fa-home icon"></i><%= person.residence %></p>
                <% if (person.id) { %>
                    <p><i class="fas fa-paint-brush icon"></i>ID: <%= person.id %></p>
                <% } else { %>
                    <p><i class="fas fa-paint-brush icon"></i> geen id mogelijk</p>
                <% } %>
            </div>
        <% }); %>
    </div>
    
    <!-- Footer section -->
    <div class="footer">
        <p>&copy; 2024 Squad Page. All rights reserved.</p>
    </div>
</div>






 

